{
  "name": "xtal",
  "version": "1.0.0",
  "description": "xtal",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "bun dist/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' NODE_ENV=test jest --config jest.config.ts --runInBand",
    "test:watch": "NODE_ENV=test jest --config jest.config.ts --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --config jest.config.ts --coverage --runInBand",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "migrate:down": "npx tsx src/db/migrateDown.ts",
    "g:module": "bash ./create-module.sh"
  },
  "keywords": [
    "fastify",
    "typescript",
    "zod",
    "pino",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^7.7.3",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^6.12.0",
    "@fastify/websocket": "10",
    "@types/nodemailer": "^7.0.3",
    "@types/sax": "^1.2.7",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.63.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.5",
    "fastify": "^4.29.1",
    "google-auth-library": "^10.3.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "modress": ".",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "postgres": "^3.4.7",
    "sax": "^1.4.1",
    "tslib": "^2.8.1",
    "undici": "^7.16.0",
    "uuidv7": "^1.0.2",
    "vite-tsconfig-paths": "^5.1.4",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xml-to-json-stream": "^1.1.0",
    "xml2js": "^0.6.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.13",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4"
  }
}
